#!/usr/bin/env bash
set -euo pipefail

ACTIONS="mount
unmount"

if ACTION="$(dmenu -l 6 <<< "$ACTIONS")"; then
	case "$ACTION" in
		"mount")
			AWKSCRIPT='NR==1 { next } $2 == "part" && $3 == 1 && !$4 {print $1}'
			;;
		"unmount")
			AWKSCRIPT='NR==1 { next } $2 == "part" && $3 == 1 && $4 {print $1}'
			;;
		*)
			echo "Action not recognized"
			exit 1
			;;
	esac

	MOUNTABLE_DEVICES="$(lsblk -r -p -o NAME,TYPE,HOTPLUG,MOUNTPOINT | awk "$AWKSCRIPT")"
	if CHOSEN_DEVICE="$(dmenu -l 6 -p "$ACTION:" <<< "$MOUNTABLE_DEVICES")"; then
		notify-send -a dmount "$(udisksctl "$ACTION" -b "$CHOSEN_DEVICE")"
	fi
fi
