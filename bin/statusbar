#!/usr/bin/env bash
set -euo pipefail
# entr -cs statusbar <<< "$(which "$0")"
while echo -e "$(nmcli net con | grep full && nmcli con show | tail -n+2 | awk '{ print ($3 == "wifi" ? " " : " ") $1 "  " }' | head -n1) $(< /sys/class/power_supply/BAT0/capacity)%   $(date +'%Y-%m-%d')   $(date +'%I:%M:%S %p')"; do sleep 1; done
